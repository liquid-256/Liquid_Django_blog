########################
# Django Core
########################
# Django 项目密钥（生产环境必须修改）
SECRET_KEY=please-change-me
# 开发环境为 True，生产环境必须为 False
DEBUG=True

########################
# Allowed Hosts
########################
# 开发环境示例：
# ALLOWED_HOSTS=127.0.0.1,localhost
#
# 生产环境示例：
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=127.0.0.1,localhost

########################
# Database (MySQL)
########################
# 数据库名
DB_NAME=your_db_name
# 数据库用户名
DB_USER=your_db_user
# 数据库密码
DB_PASSWORD=your_db_password
# 数据库地址（本机一般是 127.0.0.1）
DB_HOST=127.0.0.1
# 数据库端口
DB_PORT=3306

########################
# Security Cookie (HTTPS 开启后改为 True)
########################
# 如果你没有部署 HTTPS，一定要保持 False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

########################
# CSRF Trusted Origins（仅在 HTTPS + 反向代理 时需要）
########################
# 示例：
# CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=

########################
# Email Config (QQ 邮箱示例)
########################
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_USE_TLS=True
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@qq.com
EMAIL_HOST_PASSWORD=your-email-auth-code
DEFAULT_FROM_EMAIL=your-email@qq.com
